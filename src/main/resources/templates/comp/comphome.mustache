{{> layout/compheader}}

<div style="margin-top: 130px; min-height: 600px;" class="mx-auto">
    <div>
        <div class="new-container my-5 py-5 pt-80">

            {{> layout/sidebar}}
            <div id="content" class="my-4 layer2-right-container" style="flex: 0 0 auto; width: calc(100% - 270px);">
                <div class="components">
                    <div class="components-div p-tb-10 d-flex justify-content-between">
                        <div class="font">전체</div>
                        <div>
                            <button type="button" class="btn btn-mint offer-table-btn"><a href="/jobs/writeJobsForm">공고작성</a></button>
                        </div>
                        <!--<button type="button" class="d-flex btn btn-mint text-center" style="width:150px;">공고작성</button>
                        부모로 싸고 하시면 되요!
                        -->
                    </div>
                    <div class="components-div">
                        <table class="table table-hover offer-table scroll">
                            <thead>
                            <tr>
                                <th scope="col" style="width: 5%;">No</th>
                                <th scope="col" style="width: 40%;">현재 열린 공고</th>
                                <th scope="col" style="width: 15%;">포지션</th>
                                <th scope="col" style="width: 15%;">경력</th>
                                <th scope="col" style="width: 25%;">공고관련</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#jobList}}

                            <tr class="offer-table">

                                <td>{{id}}</td>
                                <td>
                                    <div>{{title}}</div>
                                    <div class="new-skill-box">
                                    {{#skillList}}
                                        <div class="{{color}}">{{name}}</div>
                                    {{/skillList}}
                                    </div>
                                </td>
                                <td>{{task}}</td>
                                <td>{{career}}</td>
                                <td class="d-flex justify-content-between ">
                                    <div class="new-create-button">
                                        <a href="/comp/{{sessionComp.id}}/comphome?jobsId={{id}}">
                                            <button type="button" class="btn btn-mint offer-table-btn">지원자 보기</button>
                                        </a>
                                    </div>
                                    <div class="new-create-button">
                                        <a href="/jobs/{{id}}/updateJobsForm">
                                            <button type="button" class="btn btn-mint offer-table-btn">공고 수정</button>
                                        </a>
                                    </div>
                                    <div class="new-create-button">
                                        <form action="/jobs/{{id}}/delete" method="post">
                                            <button class="btn btn-mint offer-table-btn">공고 삭제</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            {{/jobList}}
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="components" style="height: 50px;"></div>
                <div class="components">
                    <div class="font">지원자현황</div>
                    <div>
                        <hr>
                    </div>
                    <div>
                        <table class="table table-hover offer-table scroll">
                            <thead>
                            <tr>
                                <th class="center-align" scope="col" style="width: 5%;">No</th>
                                <th class="center-align" scope="col" style="width: 10%;">이름</th>
                                <th class="center-align" scope="col" style="width: 30%;">이력서제목</th>
                                <th class="center-align" scope="col" style="width: 10%;">경력</th>
                                <th class="center-align" scope="col" style="width: 35%;">주요 기술</th>
                                <th class="center-align" scope="col" style="width: 10%;"></th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#compResumeList}}
                            <tr class="offer-table">
                                <th scope="row">{{id}}</th>
                                <td>{{myName}}</td>
                                <td>{{title}}</td>
                                <td>{{career}}</td>
                                <td>
                                    <div class="new-skill-box">
                                       {{#skillList}}
                                           <div class="{{color}}">{{name}}</div>
                                       {{/skillList}}
                                    </div>
                                </td>
                                <td>
                                    <div class="new-create-button">

                                        <form action="/resume/resumeDetail/{{id}}">
                                            <input type="hidden" name="jobsId" value="{{jobsId}}">
                                            <button type="submit" class="btn btn-mint offer-table-btn">상세보기</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            {{/compResumeList}}
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{> layout/footer}}