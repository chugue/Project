{{> layout/compheader}}

<div style="margin-top: 130px; margin-bottom: 50px" class="mx-auto">
    <div style="width: 1200px; margin-left: 330px;">
        <div class="mb-3" style="margin-left: 85px">
            <div class="fs-4">지원자 현황</div>
        </div>
        <div style="display: flex; justify-content: center;">
            <div class="px-5" style="text-align: center; flex: 0 0 auto; width: 220px">

                <div class="card">
                    <div style="width: 80px">
                        <div class="relative mb-3">
                            <div>
                                <a href="/user/profileUpdateForm"
                                   onclick="window.open(this.href, '_blank', 'width=1200,height=900,toolbars=no,scrollbars=no, resizable=no'); return false;">
                                    <div class="user-img">
                                        <img src="/images/Kakao.png" class="rounded" alt="Cinque Terre"
                                             style="max-width: 80px;">

                                    </div>
                                </a>
                            </div>
                        </div>
                        <div>
                            <h6 class="card-subtitle text-muted">카카오</h6>
                            <hr>
                            <ul class="nav flex-column nav-pills">
                                <li class="nav-item">
                                    <a class="nav-link sub-menu a p-1 mb-1" aria-current="page" href="/comp/comphome">공고
                                        관리</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link sub-menu a p-1 mb-1" href="/user/offer">지원 / 제안</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link sub-menu a p-1" href="/comp/scrap">스크랩</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link sub-menu a p-1" href="/comp/talent">매칭리스트</a>
                                </li>
                                <hr>
                                <li class="nav-item">
                                    <a class="nav-link sub-menu a p-1 mb-1" href="/user/update" data-bs-toggle="modal"
                                       data-bs-target="#modal">정보수정</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link  sub-menu a p-1" href="/">로그아웃</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!--지원 테이블-->
            <div class="col-9 my-4 pe-5">
                <div>
                    <h6><b>지원
                        <div class="badge count-color px-2 " style="font-weight: 900; font-size: 16px;">
                        </div>
                    </b></h6>
                    <table class="table text-center" style="width:100%">
                        <thead>
                        <tr class="table-secondary ">
                            <th scope="col" style="width:10%">No.</th>
                            <th scope="col" style="width:15%">공고명</th>
                            <th scope="col" style="width:25%">이력서</th>
                            <th scope="col" style="width:20%">포지션</th>
                            <th scope="col" style="width:12%">상태</th>
                            <th scope="col" style="width:18%">응답</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr class="text-center">
                            <th scope="row">1</th>
                            <td>공고명</td>
                            <td><a href="/jobs/jobsDetail"
                                   onclick="window.open(this.href, '_blank', 'width=1920,height=1080,toolbars=no,scrollbars=no, resizable=no'); return false;">
                                이력서 1</a></td>
                            <td>백엔드</td>
                            <td>
                                <div id="state-${sDto.suggestId}">
                                    <div id="state-btn">
                                        <div class="badge btn-mint p-2">수락</div>
                                        <!--
                                            <div class="badge bg-secondary p-2">대기중</div>
                                            <div class="badge bg-danger p-2">거절</div>
                                            -->
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div id="response">
                                    <div class="dropdown" id="response-dropdown">
                                        <!--
                                            <button type="button" class="btn btn-dropdown-toggle py-0 mb-2"
                                                data-bs-toggle="dropdown">
                                                답변하기
                                            </button>
                                            -->

                                        <div class="badge btn-mint p-2">답변완료</div>

                                    </div>
                                </div>
                            </td>
                        </tr>
                        </tbody>
                    </table>

                    <h6><b>제안
                        <div class="badge count-color px-2 " style="font-weight: 900; font-size: 16px;">
                        </div>
                    </b></h6>
                    <table class="table" style="width:100%">
                        <thead>
                        <tr class="table-secondary text-center">
                            <th scope="col" style="width:10%">No.</th>
                            <th scope="col" style="width:23%">이름</th>
                            <th scope="col" style="width:23%">이력서</th>
                            <th scope="col" style="width:20%">공고명</th>
                            <th scope="col" style="width:16%">상태</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr class="text-center">
                            <th>1</th>
                            <td><a href="/jobs/jobsDetail"
                                   onclick="window.open(this.href, '_blank', 'width=1920,height=1080,toolbars=no,scrollbars=no, resizable=no'); return false;">
                                이름 1</a></td>
                            <td><a href="/resume/resumeDetail"
                                   onclick="window.open(this.href, '_blank', 'width=1920,height=1080,toolbars=no,scrollbars=no, resizable=no'); return false;">
                                이력서 1</a></td>
                            <td>공고명</td>
                            <td>
                                <div class="badge btn-mint p-2">
                                    <!--대기중 합격 불합격 상태표시 해야함-->
                                    합격
                                </div>
                            </td>
                        </tr>
                        </tbody>

                    </table>

                </div>
            </div>


        </div>
    </div>
</div>
<div class="modal fade" id="modal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabel">비밀번호 인증</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label for="inputPassword" class="form-label">Password</label>
                        <input type="password" class="form-control" id="inputPassword" aria-describedby="passwordHelp"
                               onkeypress="if(event.keyCode=='13'){event.preventDefault(); checkPS(`${compSession.compId}`);}">
                        <div id="passwordHelp" class="form-text">현재 비밀번호를 입력해 주세요.</div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary"
                        onclick="passwordCheckBtn(`${compSession.compId}`)">Check
                </button>
            </div>
        </div>
    </div>
</div>
{{> layout/footer}}
