<style>

    .qButton:hover {
        background-color: rgb(59, 103, 235);
        cursor: pointer;
    }

    .top_category>div:hover {
        color: rgb(87, 87, 230);
    }

    .menu_bar a:hover {
        background-color: antiquewhite;
        cursor: pointer;
    }

    .width-53 {
        width: 53%;
    }

    .qButton {
        font-size: 1em;
        font-weight: bold;
        width: 124px;
        height: 35px;
        display: inline;
        float: right;
        margin-right: 3em;
        background-color: #2cb457;
        cursor: pointer;
        color: rgb(255, 255, 255);
        border: none;
        padding: 0.2em 2em;
    }
