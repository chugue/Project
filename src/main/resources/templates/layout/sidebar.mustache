<script>

    // 페이지가 로드될 때 선택된 메뉴 항목에 활성화 클래스를 추가
    window.onload = function () {
        var url = window.location.href;
        var activeMenuId = ""; // 선택된 메뉴의 ID를 저장할 변수
        if (url.indexOf("/comp/{{id}}/comphome") !== -1) {
            activeMenuId = "compHome";
        }
        else if (url.indexOf("/comp/{{id}}/apply") !== -1) {
            activeMenuId = "apply";
        }
        else if (url.indexOf("/comp/{{id}}/scrap") !== -1) {
            activeMenuId = "scrap";
        }
        else if (url.indexOf("/comp/profileUpdateForm") !== -1) {
            activeMenuId = "profileUpdate";
        }
        else if (url.indexOf("/user/{{id}}/userHome") !== -1) {
            activeMenuId = "userHome";
        }
        else if (url.indexOf("/resume/{{id}}/manageResume") !== -1) {
            activeMenuId = "manageResume"; // 수정된 부분
        } else if (url.indexOf("/user/{{id}}/offer") !== -1) {
            activeMenuId = "offer";
        } else if (url.indexOf("/user/{{id}}/scrap") !== -1) {
            activeMenuId = "scrap";
        } else if (url.indexOf("/user/updateForm") !== -1) {
            activeMenuId = "updateForm";
        }
        else if (url.indexOf("/") !== -1) {
            activeMenuId = "logout";
        }
        // 선택된 메뉴에 활성화 클래스를 추가
        document.getElementById(activeMenuId).classList.add("active");
    };
</script>