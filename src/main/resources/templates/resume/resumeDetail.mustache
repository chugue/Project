{{> layout/header}}
<style>
    .selected3 {
        background-color: #c5f1c5;
        color: #000;
    }

    #photo {
        width: 80%;
        height: auto;
    }

    .resume-info-txt table td,
    .resume-info-txt table th {
        padding: 0 0 25px;
    }

    .resume-info-txt table td {
        margin-left: 20px;
    }
</style>

<div class="mx-auto width-53 pt-140">

    <!--이력서 작성 폼-->
    <div class="container d-flex ft-18">
        <form style="width:100%">
            <div class="">

                <!-- <div class="title">
                <h2>이력서 작성</h2>
            </div>
            <hr> -->

                <div class=" mb-3 ft-18">
                    <div class="card-header resume-info-hdtitle mt-3">기본 정보</div>
                    <hr>
                    <div class="card-body d-flex"
                         style="margin: 20px 0; padding: 20px; border: 1px solid #ddd; border-radius: 10px;">
                        <div class="my-border resume-info-img col-3 mt-3"
                             style="text-align: center; width: 200px; height: 200px; margin-top: 0 !important; background-color: white; display: flex; margin-right:50px; object-fit: cover">
                            <img class="" src="/images/aboutme_img.jpg" alt="" srcset=""
                                 style=" width: 100%; border-radius: 10px;" id="photo">
                        </div>


                        <div class="resume-info-txt">
                            <!--                                style="width: calc(100% - 250px)"-->

                            <table>

                                <tr>
                                    <th style="width: 150px">이름</th>
                                    <td>김이름</td>
                                </tr>
                                <tr>
                                    <th style="width: 150px">생년월일</th>
                                    <td>2020-01-01</td>
                                </tr>
                                <tr>
                                    <th style="width: 150px">연락처</th>
                                    <td>010-2222-5555</td>
                                </tr>
                                <tr>
                                    <th style="width: 150px">E-mail</th>
                                    <td>dsfsfd</td>
                                </tr>
                                <tr>
                                    <th style="width: 150px">주소</th>
                                    <td>부산</td>
                                </tr>


                                <tr>
                                    <th>희망 근무지역</th>
                                    <td>서울</td>
                                </tr>
                            </table>

                        </div>
                    </div>


                    <div class="card border-light mb-3 mt-3">
                        <div class="card-header resume-info-hdtitle">학력 사항</div>
                        <div class="card-body">
                            대졸
                        </div>
                    </div>

                    <div class="card border-light mb-3">
                        <div class="card-header resume-info-hdtitle">경력 사항</div>
                        <div class="card-body">
                            6년
                        </div>
                    </div>

                    <div class="card border-light mb-3">
                        <div class="card-header resume-info-hdtitle">보유 기술</div>

                        <div class="card-body">
                            <div class="row my-3 my-border" style="border:none; background-color: #F8F8F8">

                                <ul class="row technic ml-5 mt-20">
                                    <li class="col form-check">
                                        <label class="form-check-label">
                                            <input class="form-check-input" type="checkbox" name="skill"
                                                   value="Java" checked disabled>Java
                                        </label>
                                    </li>
                                    <li class="col form-check">
                                        <label class="form-check-label">
                                            <input class="form-check-input" type="checkbox" name="skill"
                                                   value="Java" checked disabled>JavaScrip
                                        </label>
                                    </li>
                                    <li class="col form-check">
                                        <label class="form-check-label">
                                            <input class="form-check-input" type="checkbox" name="skill"
                                                   value="Java" checked disabled>Spring
                                        </label>
                                    </li>
                                    <li class="col form-check">
                                        <label class="form-check-label">
                                            <input class="form-check-input" type="checkbox" name="skill"
                                                   value="Java" checked disabled>HTML
                                        </label>
                                    </li>

                                </ul>
                            </div>
                        </div>
                    </div>


                        <div class="card border-light mb-3">
                            <div class="card-header">자기소개서</div>
                            <div class="card-body">
                                <div class="form-group">
                                            <textarea class="form-control" name="content" id="content"
                                                      rows="3"></textarea>
                                </div>
                            </div>
                        </div>

                        <div class="card border-light mb-3">
                            <div class="card-header">링크</div>
                            <div class="card-body">
                                <div class="form-group">
                                    <input type="text" name="link" id="link" class="form-control">
                                </div>
                            </div>
                        </div>
                    </div>


                    <!--버튼-->
                    <div class="col-3">
                        <div id="rButton" style="width: 12em; margin-left: 150%; margin-top: -20%">
                            <br>
                            <div class="row p-1">
                                <div>
                                    <div id="scrap-${rDto.resumeId}-render">
                                        <div id="scrap-${rDto.resumeId}-remove">
                                            {{#scrap.isScrap}}
                                                <form action="/resume/scrap/{{scrap.id}}/delete" method="post">
                                                    <input type="hidden" name="resumeId" value="{{resume.id}}">
                                                    <button type="submit" class="btn btn-mint w-100 mb-10">스크랩 취소
                                                    </button>
                                                </form>
                                                <button id="scrap-${rDto.resumeId}" type="submit"
                                                        class="btn btn-outline-mint w-100">제안하기
                                                </button>
                                            {{/scrap.isScrap}}
                                            {{^scrap.isScrap}}
                                                <form action="/resume/scrap/save" method="post"
                                                      enctype="application/x-www-form-urlencoded">
                                                    <input type="hidden" name="resumeId" value="{{id}}">
                                                    <button type="submit" class="btn btn-mint w-100">스크랩</button>
                                                </form>
                                                <button id="scrap-${rDto.resumeId}" type="submit"
                                                        class="btn btn-outline-mint w-100" style="margin-bottom: 20px">
                                                    제안하기
                                                </button>
                                            {{/scrap.isScrap}}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>



{{> layout/footer}}
