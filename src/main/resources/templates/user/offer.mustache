{{> layout/header}}

<style>
    .nav-link {
        color: #222;
    }
</style>

<div class="mx-auto pt-80">
    <div class="new-flex-wrapper">
        <div class="new-container">
            <!-- 지원 및 제안 -->
            {{> layout/sidebar}}
            <div class="my-4 layer2-right-container" style="flex: 0 0 auto; width: calc(100% - 300px);">
                <div class="components">
                    <div class="components-div p-tb-10 d-flex justify-content-between">
                        <div class="font">전체</div>
                    </div>
                    <div class="components-div">
                        <table class="table table-hover offer-table scroll">
                            <thead>
                            <tr>
                                <th scope="col" style="width: 5%;">No</th>
                                <th scope="col" style="width: 40%;">이력서 목록</th>
                                <th scope="col" style="width: 15%;">주소</th>
                                <th scope="col" style="width: 15%;">경력</th>
                                <th scope="col" style="width: 25%;">제안 공고 확인</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{^resumeList}}
                                <div>현재 작성하신 이력서가 없습니다.</div>
                            {{/resumeList}}
                            {{#resumeList}}
                                <tr class="offer-table">
                                    <td>{{id}}</td>
                                    <td>
                                        <div>{{title}}</div>
                                        <div class="new-skill-box">
                                            {{#skillList}}
                                                <div class="{{color}}">{{name}}</div>
                                            {{/skillList}}
                                        </div>
                                    </td>
                                    <td>{{area}}</td>
                                    <td>{{career}}</td>
                                    <td class="d-flex justify-content-between">
                                        <div class="new-create-button">
                                            <a href="/user/{{sessionUser.id}}/offer?resumeId={{id}}">
                                            <button type="button" class="btn btn-mint offer-table-btn">제안 공고 확인</button>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {{/resumeList}}
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="components" style="height: 50px;"></div>
                <!-- 제안 목록 -->
                <div class="components">
                    <div class="font">제안 목록</div>
                    <div>
                        <hr>
                    </div>
                    <div>
                        <table class="table table-hover offer-table scroll">
                            <thead>
                            <tr>
                                <th class="center-align" scope="col" style="width: 5%;">No</th>
                                <th class="center-align" scope="col" style="width: 10%;">회사명</th>
                                <th class="center-align" scope="col" style="width: 30%;">공고제목</th>
                                <th class="center-align" scope="col" style="width: 10%;">필요경력</th>
                                <th class="center-align" scope="col" style="width: 60%;">필요 기술</th>
                                <th class="center-align" scope="col" style="width: 12%;">공고 확인</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#offerList}}
                                <tr class="offer-table">
                                    <th scope="row">{{jobsId}}</th>
                                    <td>{{compName}}</td>
                                    <td>{{title}}</td>
                                    <td>{{career}}</td>
                                    <td>
                                        <div class="new-skill-box">
                                            {{#skillList}}
                                                <div class="{{color}}">{{name}}</div>
                                            {{/skillList}}
                                        </div>
                                    </td>
                                    <td style="text-align: right;">
                                        <div class="d-flex justify-content-end">
                                            <div class="new-create-button"
                                                 style="display: inline-block; margin-left: 5px;">
                                                <a href="/jobs/jobsDetail/{{jobsId}}">
                                                    <button type="button" class="btn btn-mint offer-table-btn">상세보기
                                                    </button>
                                                </a>
                                            </div>
                                            {{#wait}}
                                                <div class="new-create-button" style="display: inline-block; margin-left: 5px;">
                                                    <button type="button" class="btn btn-mint offer-table-btn">{{wait}}</button>
                                                </div>
                                            {{/wait}}

                                            {{#fail}}
                                                <div class="new-create-button" style="display: inline-block; margin-left: 5px;">
                                                    <button type="button" class="btn btn-mint offer-table-btn">{{fail}}</button>
                                                </div>
                                            {{/fail}}

                                            {{#pass}}
                                                <div class="new-create-button" style="display: inline-block; margin-left: 5px;">
                                                    <button type="button" class="btn btn-mint offer-table-btn">{{pass}}</button>
                                                </div>
                                            {{/pass}}
                                        </div>
                                    </td>
                                </tr>
                            {{/offerList}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{> layout/footer}}
