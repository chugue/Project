{{> layout/header}}
<style>
    .my-border {
        border: 1px solid rgb(0, 0, 0);
        padding: 40px;
        padding-top: 0;
        margin-top: 0;
    }

    .selected {
        background-color: #c5f1c5;
    }

    /* .login-model{
                height: 25em;
            } */
</style>

<div class="mx-auto width-53 pt-140">

    <!--이력서 작성 폼-->
    <div class="container d-flex ft-18">
        <form style="width: 100%;">
            <div class="">

                <!-- <div class="title">
                <h2>이력서 작성</h2>
            </div>
            <hr> -->

                <div class=" mb-3 ft-18">
                    <div class="card-header resume-info-hdtitle">기본 정보</div>

                    <div class="card-body d-flex"
                         style="margin: 20px 0; padding: 20px; padding-top: 4%; border: 1px solid #ddd; border-radius: 10px;">
                        <div class="my-border resume-info-img col-3 mt-3"
                             style="text-align: center; width: 200px; border: none; height: 200px; display: flex; align-items: center; border-radius: 50%;">
                            <img class="" src="/images/logo.png" alt="" srcset="" style="width: 120%;"
                                 id="photo">
                        </div>

                        <div class="resume-info-txt ml-50 mt-2 col-6">
                            <table>
                                <tr>
                                    <th>기업명</th>
                                    <td style="padding-left: 5%">(주)grow</td>
                                </tr>
                                <tr>
                                    <th>공고제목</th>
                                    <td style="padding-left: 5%">백엔드개발자를 구합니다</td>
                                </tr>
                                <tr>
                                    <th>연락처</th>
                                    <td style="padding-left: 5%">010-000-0000</td>
                                </tr>
                                <tr>
                                    <th>주소</th>
                                    <td style="padding-left: 5%">부산시 00구 00로 000번길 00 000 apt</td>
                                </tr>
                                <tr>
                                    <th>근무지역</th>
                                    <td style="padding-left: 5%">
                                        서울.분당
                                    </td>
                                </tr>
                            </table>

                        </div>
                    </div>


                    <div class="card border-light mb-3 mt-3">
                        <div class="card-header resume-info-hdtitle">학력 사항</div>
                        <div class="card-body">
                            대졸
                        </div>
                    </div>

                    <div class="card border-light mb-3">
                        <div class="card-header resume-info-hdtitle">경력 사항</div>
                        <div class="card-body">
                            6년
                        </div>
                    </div>

                    <div class="card border-light mb-3">
                        <div class="card-header resume-info-hdtitle">보유 기술</div>

                        <div class="card-body">
                            <div class="row my-3 my-border" style="border:none; background-color: #F8F8F8">

                                <ul class="row technic mt-50">
                                    <li class="col form-check">
                                        <label class="form-check-label">
                                            <input class="form-check-input" type="checkbox" name="skill"
                                                   value="Java" checked disabled>Java
                                        </label>
                                    </li>
                                    <li class="col form-check">
                                        <label class="form-check-label">
                                            <input class="form-check-input" type="checkbox" name="skill"
                                                   value="Java" checked disabled>JavaScript
                                        </label>
                                    </li>
                                    <li class="col form-check">
                                        <label class="form-check-label">
                                            <input class="form-check-input" type="checkbox" name="skill"
                                                   value="Java" checked disabled>Spring
                                        </label>
                                    </li>
                                    <li class="col form-check">
                                        <label class="form-check-label">
                                            <input class="form-check-input" type="checkbox" name="skill"
                                                   value="Java" checked disabled>HTML
                                        </label>
                                    </li>

                                </ul>
                            </div>
                        </div>
                    </div>


                    <div class="card border-light mb-3">
                        <div class="card-header">기업소개</div>
                        <div class="card-body">
                            <img src="/images/jobdetail.png" alt="">
                        </div>
                    </div>

                    <div class="card border-light mb-3">
                        <div class="card-header">링크</div>
                        <div class="card-body">
                            <div class="form-group mb-2">
                                <a href="#" class="form-control ">www.naver.com</a>
                            </div>
                            <div class="form-group">
                                <a href="#" class="form-control ">www.naver.com</a>
                            </div>
                        </div>
                    </div>

                    <!--버튼-->
                    <div class="col-3">
                        <div id="rButton" style="width: 12em; margin-left: 150%; margin-top: -20%">
                            <br>
                            <div class="row p-1">
                                <div>
                                    <div id="scrap-${rDto.resumeId}-render">
                                        <div id="scrap-${rDto.resumeId}-remove">
                                            {{#scrap.isScrap}}
                                                <form action="/comp/scrap/{{scrap.id}}/delete" method="post">
                                                    <input type="hidden" name="resumeId" value="{{resume.id}}">
                                                    <button type="submit" class="btn btn-mint w-100">스크랩 취소</button>
                                                </form>
                                                <button id="scrap-${rDto.resumeId}" type="submit"
                                                        class="btn btn-outline-mint w-100">지원하기
                                                </button>
                                            {{/scrap.isScrap}}
                                            {{^scrap.isScrap}}
                                                <form action="/comp/scrap/save" method="post"
                                                      enctype="application/x-www-form-urlencoded">
                                                    <input type="hidden" name="resumeId" value="{{id}}">
                                                    <button type="submit" class="btn btn-mint w-100">스크랩</button>
                                                </form>
                                                <button id="scrap-${rDto.resumeId}" type="submit"
                                                        class="btn btn-outline-mint w-100" style="margin-bottom: 20px">지원하기
                                                </button>
                                            {{/scrap.isScrap}}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

