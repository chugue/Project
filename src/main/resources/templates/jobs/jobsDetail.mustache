{{> layout/header}}
<style>
    .my-border {
        border: 1px solid rgb(0, 0, 0);
        padding: 40px;
        padding-top: 0;
        margin-top: 0;
    }
</style>

<div class="mx-auto width-53 pt-140">
    <div class="container d-flex ft-18">
        <form style="width: 100%;">
            <div class="">
            <div class=" mb-3 ft-18">
                {{#jobs}}
                    <div class="card-header resume-info-hdtitle mt-3">기업 정보</div>
                    <hr>

                    <div class="card-body d-flex">
                        <div class="resume-info-img col-3" style="text-align: center; margin-top: 125px">
                            <img class="" src="{{photo}}" alt="" srcset="" style="width: 160px; height: auto;"
                                 id="photo">
                        </div>

                        <div class="resume-info-txt ml-50 mt-2">
                            <table>
                                <tr>
                                    <th>기업명</th>
                                    <td>{{compName}}</td>
                                </tr>
                                <tr>
                                    <th>공고제목</th>
                                    <td style="padding-left: 10px;">{{title}}</td>
                                </tr>
                                <tr>
                                    <th>연락처</th>
                                    <td>{{phone}}</td>
                                </tr>
                                <tr>
                                    <th>주소</th>
                                    <td>{{address}}</td>
                                </tr>
                                <tr>
                                    <th>근무지역</th>
                                    <td style="padding-left: 10px;">{{area}}</td>
                                </tr>
                            </table>

                        </div>
                    </div>

                    <div class="card border-light mb-3 mt-3">
                        <div class="card-header resume-info-hdtitle">학력 사항</div>
                        <div class="card-body">{{edu}}</div>
                    </div>

                    <div class="card border-light mb-3">
                        <div class="card-header resume-info-hdtitle">경력 사항</div>
                        <div class="card-body">{{career}}</div>
                    </div>

                    <div class="card border-light mb-3">
                        <div class="card-header resume-info-hdtitle">필요 기술</div>
                        <div class="card-body">
                            <div class="my-3" style="background-color: #f8f8f8; padding: 20px">
                                <div class="new-skill-box">
                                    {{#skillList}}
                                        <div class="{{color}}">{{name}}</div>
                                    {{/skillList}}
                                </div>
                            </div>
                            <div class="card border-light mb-3">
                                <div class="card-header">본문</div>
                                <div class="card-body">{{content}}</div>
                            </div>

                            <div class="card border-light mb-3">
                                <div class="card-header">링크</div>
                                <div class="card-body">
                                    <div class="form-group mb-2">
                                        <a href="#" class="form-control">{{homepage}}</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{/jobs}}
            </div>
        </form>


        <!--버튼-->
        <div class="ml-50">
            <div id="rButton" style="width: 380px;">
                <br>
                <div class="row p-1">
                    <div>
                        <div>
                            <div>
                                {{^login}}
                                    <div>로그인 하셔서 작성하신 이력서를 선택하여 공고에 지원하여 보세요!</div>
                                {{/login}}

                                {{#login}}
                                    {{^resumeList}}
                                        <div class="card border-light mb-3">
                                            <div class="card-header resume-info-hdtitle">이력서 목록</div>
                                            <div>작성한 이력서가 없습니다.</div>
                                        </div>
                                    {{/resumeList}}

                                    <form action="/jobs/apply/save" method="post" enctype="application/x-www-form-urlencoded">
                                        <div class="card border-light mb-3">
                                            <div class="card-header resume-info-hdtitle">이력서 목록</div>
                                            <div class="card-body">
                                                <div class="form-group">
                                                    {{#resumeList}}
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="radio" name="resumeId" id="resume{{id}}" value="{{id}}">
                                                            <label class="form-check-label" for="resume{{id}}">
                                                                {{title}}
                                                            </label>
                                                        </div>
                                                        <input type="hidden" name="jobsId" value="{{jobsId}}">
                                                    {{/resumeList}}

                                                    <button type="submit" class="btn btn-outline-mint w-100">지원하기</button>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                {{/login}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
{{> layout/footer}}
